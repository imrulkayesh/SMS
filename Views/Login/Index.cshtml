@model SMS.ViewModels.LoginViewModel
@*@model SMS.Models.User*@
@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="login-wrapper row">
    <div id="login" class="login loginpage col-lg-offset-4 col-md-offset-3 col-sm-offset-3 col-xs-offset-0 col-xs-12 col-sm-6 col-lg-4">
        <h1><a href="#" title="Login Page" tabindex="-1">Admin</a></h1>
        <!-- Display ViewBag.Message -->
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-info">
                @ViewBag.Message
            </div>
        }
        <form name="loginform" id="loginform" asp-controller="Login" asp-action="Index" method="post">
            <p>
                <label asp-for="UserId">
                    @*Username<br />*@
                    @Html.DisplayNameFor(model => model.UserId)<br />
                    <input type="text" asp-for="UserId" id="UserId" required class="input" size="20" />
                </label>
            </p>
            <p>
                <label asp-for="Password">
                    @*Password<br />*@
                    @Html.DisplayNameFor(model => model.Password)<br />
                    <input type="password" asp-for="Password" id="Password" required class="input" size="20" />
                </label>
            </p>
            <p class="forgetmenot">
                <label class="icheck-label form-label" for="rememberme"><input name="rememberme" type="checkbox" id="rememberme" value="forever" class="icheck-minimal-aero" checked> Remember me</label>
            </p>
            <p class="submit">
                <input type="submit" name="btnSubmit" id="btnSubmit" class="btn btn-accent btn-block" value="Sign In" />
            </p>
        </form>

        <p id="nav">
            <a class="pull-left" href="#" title="Password Lost and Found">Forgot password?</a>
            <a class="pull-right" href="#" title="Sign Up">Sign Up</a>
        </p>


    </div>
</div>
