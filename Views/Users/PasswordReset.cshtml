@model SMS.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Password Reset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper main-wrapper row">
    <div class="col-xs-12">
        <section class="box">
            <header class="panel_header">
                <h2 class="title pull-left">User Form</h2>
                <div class="actions panel_actions pull-right">
                    <a class="box_toggle fa fa-chevron-down"></a>
                    <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                    <a class="box_close fa fa-times"></a>
                </div>
            </header>
            <div class="content-body">
                <!-- Display TempData message -->
                @if (TempData["msg"] != null)
                {
                    <div class="alert alert-info">
                        @TempData["msg"]
                    </div>
                }
                <form asp-action="PasswordReset" asp-controller="Users" method="post" id="myForm">
                    <div class="row">
                        <div class="col-md-8 col-sm-9 col-xs-10">
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.UserId)
                                <div class="controls">
                                    <input type="text" asp-for="UserId" class="form-control" />
                                    <span asp-validation-for="UserId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.NewPassword)
                                <div class="controls">
                                    <input type="password" asp-for="NewPassword" class="form-control" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.ConfirmPassword)
                                <div class="controls">
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <br />
                                <div class="form-group float-right">
                                    <input type="submit" class="btn btn-primary swal" value="Submit" id="SaveData" />
                                    <a id="refresh" class="btn btn-info" asp-action="Index" asp-controller="Users">Refresh</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</section>
