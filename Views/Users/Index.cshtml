@model SMS.ViewModels.UserViewModel
@{
    ViewData["Title"] = "User Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //IgnoreSection("scripts");
}

<!-- Include DataTables CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />


<section class="wrapper main-wrapper row">
    <div class="col-xs-12">
        <section class="box">
            <header class="panel_header">
                <h2 class="title pull-left">User Form</h2>
                <div class="actions panel_actions pull-right">
                    <a class="box_toggle fa fa-chevron-down"></a>
                    <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                    <a class="box_close fa fa-times"></a>
                </div>
            </header>
            <div class="content-body">
                <!-- Display TempData message -->
                @if (TempData["msg"] != null)
                {
                    <div class="alert alert-info">
                        @TempData["msg"]
                    </div>
                }
                <form asp-action="Index" asp-controller="Users" method="post" id="myForm">
                    <div class="row">
                        <div class="col-md-8 col-sm-9 col-xs-10">
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.UserName)
                                <div class="controls">
                                    <input type="text" asp-for="UserName" class="form-control" placeholder="Enter your user name" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.Designation)
                                <div class="controls">
                                    <input type="text" asp-for="Designation" class="form-control" placeholder="Designation name" />
                                    <span asp-validation-for="Designation" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.UserId)
                                <span class="desc">e.g. "Mr. XYZ"</span>
                                <div class="controls">
                                    <input type="text" asp-for="UserId" class="form-control" placeholder="Enter your user id" />
                                    <span asp-validation-for="UserId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.DisplayNameFor(model => model.Password)
                                <span class="desc">e.g. "Cre@t!v!ty"</span>
                                <div class="controls">
                                    <input type="password" asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            @*<div class="form-group">
                            <label class="form-label">
                            <input type="checkbox" class="iCheck" checked /> <span>Remember me</span>
                            </label>
                            </div>*@

                            <div class="form-group">
                                <br />
                                <div class="form-group float-right">
                                    <input type="submit" class="btn btn-primary swal" value="Submit" id="SaveData" />
                                    <a id="refresh" class="btn btn-info" asp-action="Index" asp-controller="Users">Refresh</a>
                                    <a class="btn btn-success" id="Search">Search</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>

    <table id="userTable" class="display">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserId</th>
                <th>Password</th>
                <th>UserName</th>
                <th>Designation</th>
            </tr>
        </thead>
    </table>

</section>

<!-- Include jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Include DataTables JS -->
<script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#userTable').DataTable({
            "ajax": {
                "url": "@Url.Action("GetAll", "Users")",
                "type": "GET",
                "datatype": "json",
                "dataSrc": "data"  // Ensure that "data" is the correct property name
            },
            "columns": [
                { "data": "id" },
                { "data": "UserId" },
                { "data":"password" },
                { "data": "UserName" },
                { "data": "designation" }
            ],
            "paging": true,
            "info": true,
            "responsive": true
        });
    });
</script>


